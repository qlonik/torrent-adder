#!/usr/bin/env bash

WATCH_PATH="~"

inotifywait -rm -e create -e moved_to ${WATCH_PATH} |
while read path action file; do
   echo "The file '$file' appeared in directory '$path' via '$action'"

   if [[ $file == *".torrent" ]]; then
      transmission-remote -w $path -a $path/$file
      rm $path/$file
   fi
done
